{
  "name": "listeur_de_fichiers_et_dossiers",
  "version": "2.0.1",
  "description": "Listeur récursif de fichiers et dossiers avec architecture modulaire avancée - 20 modules spécialisés (ReportSectionBuilder + WorkflowOrchestrator)",
  "main": "listeur_de_fichiers_et_dossiers.js",
  "type": "commonjs",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "node listeur_de_fichiers_et_dossiers.js",
    "start:window": "electron ui/main.js",
    "start:legacy": "node archives_anciennes_versions/listeur_de_fichiers_et_dossiers_legacy.js",
    "start:simple": "node archives_anciennes_versions/listeur_de_fichiers_et_dossiers_simple_no_modular.js",
    "build": "npx @yao-pkg/pkg listeur_de_fichiers_et_dossiers.js --targets win --output listeur_de_fichiers_et_dossiers.exe",
    "build:legacy": "npx @yao-pkg/pkg archives_anciennes_versions/listeur_de_fichiers_et_dossiers_legacy.js --targets win --output archives_anciennes_versions/listeur_de_fichiers_et_dossiers_legacy.exe",
    "build:simple": "npx @yao-pkg/pkg archives_anciennes_versions/listeur_de_fichiers_et_dossiers_simple_no_modular.js --targets win --output archives_anciennes_versions/listeur_de_fichiers_et_dossiers_simple.exe",
  "build-css": "npx tailwindcss -i ui/input.css -o ui/styles.css --watch --content \"ui/**/*.{html,js}\"",
  "build-css:prod": "npx tailwindcss -i ui/input.css -o ui/styles.css --minify --content \"ui/**/*.{html,js}\"",
    "test": "node test/test-modules.js"
  },
  "keywords": [
    "file",
    "directory",
    "recursive",
    "tree",
    "executable",
    "nodejs",
    "popup",
    "powershell",
    "windows"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@yao-pkg/pkg": "^6.6.0",
    "electron": "^37.2.6",
  "tailwindcss": "^4.0.0",
  "@tailwindcss/cli": "^4.0.0"
  }
}
